extends layout

block content
  script(src="/javascripts/recaptcha-loader.js")
  if event === "passwordset"
    p(class="message") Password set successfully, you can now log in.
  else if event === "loginfailed"
    p(class="message") Incorrect e-mail and/or password.
     a(href='/auth/passwordreset') Reset your password.
  form(method='POST' action='/auth/login')
    div.form-group
      input#email.form-control(type='email', placeholder='E-mail address' name='email' required)
    div.form-group
      input#pw.form-control(type='password' placeholder='Password' name='password' required)
    button.btn.btn-primary(type='submit') Log in
    div#recaptcha
    a#signup-btn(href="/auth/signup") Sign up
    a#password-reset-btn(href="/auth/passwordreset") Forgot password
  script(src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit" async defer)
  div#social-buttons
    a#github-btn(class="button" href="/auth/github") GitHub
    | &nbsp;
    a#google-btn(class="button" href="/auth/google") Google+
    | &nbsp;
    a#facebook-btn(class="button" href="/auth/facebook") Facebook