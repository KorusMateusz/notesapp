extends layout

block content
  script(src='/javascripts/confirm-password-validator.js')
  form(method='POST' action='/auth/passwordsetup/')
    p Password must contain at least 6 symbols, including one letter and one digit.
    div.form-group
      input#password.form-control(
      type='password', placeholder='Password' name='password' required onchange="check_pass()"
      )
    div.form-group
      input#confirm_password.form-control(
      type='password', placeholder='Confirm password' name='confirm_password' required onchange="check_pass()"
      )
    input#token(type="hidden" name="token" value=token)
    button.btn.btn-primary#submit(type='submit' disabled) Set new password.
